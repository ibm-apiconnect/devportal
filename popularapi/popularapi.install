// hook_install() implementation
function popularapi_install() {
  // create default fields
  _popularapi_add_fields();
}

// hook_uninstall() implementation
function popularapi_uninstall() {
  _popularapi_delete_fields();
}

function _popularapi_add_fields() {
  foreach (_popularapi_fields() as $field) {
    $existingfield = field_info_field($field['field_name']);
    if (!isset($existingfield)) {
      field_create_field($field);
    }
  }
  foreach (_popularapi_instances() as $fieldinstance) {
    $fieldinstance['entity_type'] = 'bean';
    $fieldinstance['bundle'] = 'popularapi_block';
    field_create_instance($fieldinstance);
  }
}

function _popularapi_delete_fields() {
  foreach (array_keys(_popularapi_fields()) as $field) {
    field_delete_field($field);
  }
  $instances = field_info_instances('bean', 'popularapi_block');
  foreach ($instances as $instance_name => $fieldinstance) {
    field_delete_instance($fieldinstance);
  }
}

function _popularapi_fields() {
  $t = get_t();
  return array(
    'popapiblocktitle' => array(
      'field_name' => 'popapiblocktitle',
      'label' => t('Title'),
      'type' => 'text',
      'translatable' => TRUE
    )
  );
}

function _popularapi_instances() {
  $t = get_t();
  return array(
    'popapiblocktitle' => array(
      'field_name' => 'popapiblocktitle',
      'type' => 'text',
      'label' => t('Displayed Title (translatable)'),
      'widget' => array('type' => 'text_textfield'),
      'description' => t('The Title of the block. The <em>, <strong>, <i> and <b> HTML tags are allowed, all others will be filtered out.'),
      'display' => array(
        'default' => array('label' => 'hidden', 'type' => 'text'),
        'teaser' => array('label' => 'hidden', 'type' => 'text')
      )
    )
  );
}

/**
 * Update code to handle upgrade from earlier version
 */
function popularapi_update_7400() {
  $fields = field_info_field_map();
  foreach (_popularapi_fields() as $field) {
    if (!array_key_exists($field['field_name'], $fields)) {
      $field_info = field_info_field($field['field_name']);
      if (!isset($field_info) || empty($field_info)) {
        field_create_field($field);
        watchdog('popularapi', 'Field %field_name has been successfully added', array(
          '%field_name' => $field['field_name']
        ));
      }
      else {
        watchdog('popularapi', 'Field %field_name already exists although instance doesnt', array(
          '%field_name' => $field['field_name']
        ));
      }
    }
    else {
      watchdog('popularapi', 'Field %field_name already exists', array(
        '%field_name' => $field['field_name']
      ));
    }
  }

  foreach (_popularapi_instances() as $fieldinstance) {
    if (!array_key_exists($fieldinstance['field_name'], $fields)) {
      $fieldinstance['entity_type'] = 'bean';
      $fieldinstance['bundle'] = 'popularapi_block';
      field_create_instance($fieldinstance);
      watchdog('popularapi', 'Instance %instance_name has been successfully added', array(
        '%instance_name' => $fieldinstance['field_name']
      ));
    }
    else {
      // Fetch existing instance
      $instance_info = field_info_instance('bean', $fieldinstance['field_name'], 'popularapi_block');
      if (isset($instance_info)) {
        // ensure all view modes are set
        foreach ($fieldinstance['display'] as $key => $value) {
          if (!isset($instance_info['display'][$key])) {
            $instance_info['display'][$key] = $value;
          }
        }
        // Write the changed instance back.
        field_update_instance($instance_info);
      }
      watchdog('popularapi', 'Instance %instance_name already exists', array(
        '%instance_name' => $fieldinstance['field_name']
      ));
    }
  }
  // set the blocktitle to be what the block title is set to
  $beans = bean_get_all_beans();
  if (isset($beans)) {
    foreach ($beans as $bean) {
      if ((isset($bean->delta) && ($bean->delta == 'popularapi')) || (isset($bean->type) && $bean->type == 'popularapi_block')) {
        if (!isset($bean->blocktitle['en'][0]['value']) && isset($bean->title)) {
          $bean->blocktitle = array(
            'en' => array(
              array(
                'value' => $bean->title,
                'format' => 'plain_text'
              )
            )
          );
          $bean->save();
        }
      }
    }
  }
}