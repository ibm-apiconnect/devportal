/**
 * Drupal 10 Upgrade
 */
function apim_profile_update_10001() {

  // Delete /tsandcs and /privacy route alias as they are created wrong in 2018
  // and upgrading to v10.0.5.2 they will still be broken. So just delete them and recreate them
  // we have to assume tsandcs is node 1 (it should be) and privacy is node 2 as we have no
  // other sure way of knowing as the other info could have been edited by customer.
  $alias_manager = \Drupal::service('path_alias.manager');
  $path_alias_storage = \Drupal::entityTypeManager()->getStorage('path_alias');

  $entities = $path_alias_storage->loadByProperties([
      'alias' => '/tsandcs',
  ]);
  $path_alias_storage->delete($entities);
  $path_alias = $path_alias_storage->create([
    'path' => '/node/1',
    'alias' => '/tsandcs',
  ]);
  $path_alias_storage->save($path_alias);

  $entities = $path_alias_storage->loadByProperties([
      'alias' => '/privacy',
  ]);
  $path_alias_storage->delete($entities);
  $path_alias = $path_alias_storage->create([
    'path' => '/node/2',
    'alias' => '/privacy',
  ]);
  $path_alias_storage->save($path_alias);

  // Removed roles from
  user_role_revoke_permissions(RoleInterface::ANONYMOUS_ID, [
    'use search autocomplete',
    'use advanced search',
    'access browse_content entity browser pages',
    'search content',
    'use search_api_autocomplete for search_content'
  ]);

  user_role_revoke_permissions(RoleInterface::AUTHENTICATED_ID, [
    'use search autocomplete',
    'use advanced search',
    'search content',
    'access browse_content entity browser pages',
    'use search_api_autocomplete for search_content'
  ]);

  user_role_revoke_permissions('content_author', [
    'access in-place editing',
    'bypass content access control',
    'access printer-friendly version',
    'access browse_content_iframe entity browser pages',
    'access browse_files entity browser pages',
    'access browse_content entity browser pages',
    'access browse_files_modal entity browser pages',
    'use text format ghmarkdown'
  ]);

  user_role_revoke_permissions('administrator', [
    'access flood unblock',
    'access in-place editing',
