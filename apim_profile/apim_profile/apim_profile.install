/**
* Update file upload secure validator to treat gzip and x-gtar as the same
*/
function apim_profile_update_10002() {
  $config_factory = \Drupal::configFactory();
  $config = $config_factory->getEditable('file_upload_secure_validator.settings');
  $mime_types = $config->get('mime_types_equivalence_groups');
  $module_tar = array("application/gzip", "application/x-gtar");
  array_push($mime_types, $module_tar);
  $config->set('mime_types_equivalence_groups', $mime_types);
  $config->save(TRUE);
}

/**
* Create a block for get help block content if it does not exist. This allows the get help block to be translated
*/
function apim_profile_update_10003() {
  $gethelp_block = Block::load('get_help');
  if ($gethelp_block == NULL) {
    $ghBlockContent = \Drupal::entityTypeManager()->getStorage('block_content')->loadByProperties(['info' => 'Get Help [en]']);

    // We should only create this block if we were able to grab it using the property above. Otherwise the customer has modified it
    // and so we should leave it alone
    if (!empty($ghBlockContent) && count($ghBlockContent) === 1) {
      $ghBlockContent = array_shift($ghBlockContent);
      $gethelp_values = [
        'id' => 'get_help',
        'plugin' => 'block_content:' . $ghBlockContent->uuid(),
        'provider' => NULL,
        'region' => 'disabled',
        'settings' => [
          'id' => 'block_content:' . $ghBlockContent->uuid(),
          'label' => 'Get Help',
          'provider' => 'block_content',
          'label_display' => FALSE,
        ],
        'theme' => 'connect_theme',
        'visibility' => [],
        'weight' => 520,
      ];
      $gethelp_block = Block::create($gethelp_values);
      $gethelp_block->save();
    }
  }
}

