          'application_devorg_owner' => $devorg_owner,
          'application_devorg_members' => implode(',', $org_recipients),
          'application_new_credentials' => json_encode($data)
        );

        // Make sure we do not provide NULL values, as Rules module doesn't like them.
        // @see http://drupal.org/node/1497534
        foreach ($rules_payload as $key => $value) {
          if (is_null($value)) {
            $rules_payload[$key] = '';
          }
        }
        rules_invoke_event('application_clientsecret_reset', $rules_payload['application_id'], $rules_payload['application_nid'], $rules_payload['application_name'], $rules_payload['application_description'], $rules_payload['application_credentials'], $rules_payload['application_oauth_redirect_uri'], $rules_payload['application_devorg_id'], $rules_payload['application_devorg_name'], $rules_payload['application_devorg_owner'], $rules_payload['application_devorg_members'], $rules_payload['application_new_credentials']);
      }
    }

    $form_state['redirect'] = 'application/' . $appId;
  }
}

