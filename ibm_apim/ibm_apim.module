/**
 * Base64 encode (URL safe)
 * @param $input
 * @return string
 */
function ibm_apim_base64_url_encode($input) {
  return strtr(base64_encode($input), '+/=', '-_,');
}

/**
 * Base64 decode (URL safe)
 * @param $input
 * @return string
 */
function ibm_apim_base64_url_decode($input) {
  return base64_decode(strtr($input, '-_,', '+/='));
}

/**
 * Return markdown string if module enabled
 * @param $string
 * @return mixed
 */
function ibm_apim_markdown_field($string) {
  if (!isset($string) || empty($string)) {
    return NULL;
  }
  elseif (module_exists('ghmarkdown')) {
    return filter_xss(_filter_ghmarkdown($string, NULL));
  }
  elseif (module_exists('markdown')) {
    return filter_xss(_filter_markdown($string, NULL));
  }
  else {
    return '<p>' . $string . '</p>';
  }
}

/**
