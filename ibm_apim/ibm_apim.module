/**
 * A function to update the organization name.
 *
 * @param null $orgid
 * @param null $orgname
 * @return array|null
 */
function ibm_apim_update_org_name($orgid = NULL, $orgname = NULL) {
  global $user;
  $result = NULL;
  if (isset($orgid) && isset($orgname)) {
    $apim_session = &_ibm_apim_get_apim_session();
