{#
/**
 * @file
 * Default theme implementation for the caseStudy block
 *
 * @ingroup themeable
 */
#}
{% if caseStudies|length > 0 %}
  <div class="featuredCaseStudies featuredCaseStudiesBlockWrapper">
    <div class="featuredCaseStudiesBlockHeader">
      <h3>{{ 'Case studies'|t }}</h3>
      <a href="{{ path('view.case_studies.page_1') }}">{{ 'View all'|t }}</a>
    </div>
      <div class="featuredCaseStudiesContainer">
        {% for caseStudy in caseStudies %}
        <div class="featuredCaseStudiesNode bx--card">
          <div class="apicCard apicCaseStudyCard caseStudyNodeID-{{ caseStudy.nid|clean_class }}">
            <div class="apicCardMain">
              <div>
                {% if caseStudy.image %}
                  <div class="apicCaseStudyImage">
                    <img src="{{- caseStudy.image -}}" loading="lazy" alt={{ caseStudy.title }} class="img-responsive" typeof="foaf:Image" />
                  </div>
                {% else %}
                  <div class="apicCaseStudyImage">
                    <img src="modules/case_study/images/case_study_placeholder.png" loading="lazy" alt="placeholder" class="img-responsive" typeof="foaf:Image" />
                  </div>
                {% endif %}
                <div class="apicCaseStudyTitle bx--about__title--name">
                  <span>
                    {{ caseStudy.title }}
                  </span>
                </div>
              </div>
              <div class="apicCaseStudyDesc apicFade">
                {{ caseStudy.summary }}
              </div>
              <a class="apicCaseStudyLink" href="{{- path('entity.node.canonical', {'node': caseStudy.nid}) -}}" rel="bookmark">
                <svg width="16px" height="14px" viewBox="0 0 16 14" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" fill-rule="evenodd"><polygon id="Shape" points="12.6 6 0 6 0 8 12.7 8 7.7 12.7 9 14 16 7 9 0 7.7 1.3"></polygon></svg>
              </a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}