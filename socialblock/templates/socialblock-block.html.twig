{#
/**
 * @file
 * Default theme implementation for the socialblock
 *
 * @ingroup themeable
 */
#}

<div class="socialblockWrapper">
  {% if posts is defined and posts is not empty %}
    <div class="socialblock container">
      {% for post in posts %}
        {% if post.type == 'tweet' %}
          <div class="socialblock card tweet">
            <div class="tweet_info">
              <div class="tweet_profile">
                <img class="profile_image" src="{{ post.profile_img }}" alt>
                <div class="profile_name">
                  <a href="https://twitter.com/{{ post.handle }}" target="_blank" rel="noopener"
                     class="profile_name name">{{ post.name }}</a>
                  <div class="twitter_handle">@{{ post.handle }}</div>
                </div>
              </div>
              <div class="tweet_meta">
                <a href="https://twitter.com/{{ post.handle }}/statuses/{{ post.tweet_id }}" target="_blank" rel="noopener"
                   class="bird" title="{{ 'Open this tweet'|t }}"></a>
                <div class="tweet_timestamp">{{ post.timestamp }}</div>
              </div>
            </div>
            {% if post.photos is defined and post.photos is not empty %}
              {% for photo in post.photos %}
                <div class="centerContainer"><img class="tweet_image" src="{{ photo.url }}" alt/></div>
              {% endfor %}
            {% endif %}
            <div class="tweet_text">{{ post.content|raw }}</div>
          </div>
        {% else %}
          <div class="socialblock card forum_topic">
            <div class="forum_info">
              <div class="forum_title"><a href="{{ post.url }}" class="title"
                                          title="{{ post.title }}">{{ post.title }}</a></div>
              <div class="forum_icon"><a href="{{ post.url }}" class="speechbubble" title="{{ 'Open this post'|t }}">
                  <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                       xml:space="preserve">
<g>
